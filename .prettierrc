{
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 150,
    "tabWidth": 4,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "singleAttributePerLine": true,
    "endOfLine": "crlf",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 3
            }
        },
        {
            "files": "*.md",
            "options": {
                "proseWrap": "always"
            }
        }
    ]
}
